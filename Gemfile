source 'https://rubygems.org'

require 'json'
require 'open-uri'
versions = JSON.parse(open('https://pages.github.com/versions.json').read)

gem 'github-pages', versions['github-pages']

group :development do 

	gem 'kramdown'
	gem 'coderay'
	gem 'jekyll-mentions'
	gem 'jemoji'
	gem 'jekyll-redirect-from'
	gem 'jekyll-sitemap'
	gem 'rake'
	gem 'jekyll'
	gem 'rdiscount'
	gem 'pygments.rb'
	gem 'RedCloth'
	gem 'haml'
	gem 'rb-fsevent'
	gem 'stringex'
	gem 'liquid'
end 